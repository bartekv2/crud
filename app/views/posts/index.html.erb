<h3>Lista wpisów</h3>
<p><%= link_to "Dodaj nowy wpis", new_post_path, class: "btn btn-success" %></p>
<ul class="nav nav-pills">
  <li class="nav-item"><%= link_to "Wszystkie", posts_path, :class => current_class?(posts_path) %></li>
  <li class="nav-item"><%= link_to "Opublikowane", published_posts_path, :class => current_class?(published_posts_path) %></li>
</ul>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Opublikowany?</th>
      <th>Treść</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= post.published ? "tak" : "nie" %></td>
      <td><%= post.body %></td>
      <td>
        <%= link_to "Pokaż", post_path(post), class: "btn btn-info btn-sm" %>
        <%= link_to "Edytuj", edit_post_path(post), class: "btn btn-primary btn-sm" %>
        <%= link_to "Usuń", confirm_destroy_post_path(post), class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
